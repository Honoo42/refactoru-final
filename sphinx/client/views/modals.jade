template(name='submitModal')
	#submitModal.modal.fade.in.col-xs-12(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
		.modal-dialog
			.modal-content
				.modal-header
					button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
					h4.modal-title Add new Trivia #{username}
				.modal-body
					+submitTrivia

template(name='submitItem')
	input.open-modal.submitItem(type='button',value='Triva Submit')

