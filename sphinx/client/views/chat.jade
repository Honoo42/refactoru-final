head
	link(rel="stylesheet",type="text/css",href="http://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.1.1/css/bootstrap.min.css")
	link(rel="stylesheet",type="text/css",href=".../public/main.css")
body
	+mainBox

//- Main Chat Window
template(name="mainBox")
	.container
		h2 Chat with some Friends
		+loginButtons
		+chatBox
//- Chat box with messages
template(name="chatBox")
	#messages
		+each messages
			+chatMessage
	textarea#chat-message
	br 
	button.btn.btn-primary#send Send Chat

template(name='chatMessage')
	.user-reference
		b {{user}}:
		| {{message}}